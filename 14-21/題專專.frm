Option Explicit
Dim 已抽地雷 As Integer
Dim 被抽過的格子(0 To 48) As Integer
Dim 抽籤 As Integer
Dim i As Integer
Dim p As Integer


Private Sub Form_Load()
已抽地雷 = 0
Randomize

Do
    抽籤 = Int(Rnd * 49)
    Print 抽籤
        If 被抽過的格子(抽籤) = 0 Then
            Label1(抽籤).Tag = "*"
            被抽過的格子(抽籤) = 1
            已抽地雷 = 已抽地雷 + 1
        End If
Loop Until 已抽地雷 = 9

For i = 0 To 48
    p = 0
    If Label1(i).Tag <> "*" Then
        If (i - 8) >= 0 And (i - 8) Mod 7 <> 6 Then
            If Label1(i - 8).Tag = "*" Then
                p = p + 1
            End If
        End If
        
         If (i - 7) >= 0 Then
            If Label1(i - 7).Tag = "*" Then
                p = p + 1
            End If
        End If
        
        If (i - 6) >= 0 And (i - 6) Mod 7 <> 0 Then
            If Label1(i - 6).Tag = "*" Then
                p = p + 1
            End If
        End If
        
        If (i - 1) > 0 And (i - 1) Mod 7 <> 6 Then
            If Label1(i - 1).Tag = "*" Then
                p = p + 1
            End If
        End If
        
        If (i + 1) > 0 And (i + 1) < 49 And (i + 1) Mod 7 <> 0 Then
            If Label1(i + 1).Tag = "*" Then
                p = p + 1
            End If
        End If
        
        If (i + 6) > 0 And (i + 6) < 49 And (i + 6) Mod 7 <> 6 Then
            If Label1(i + 6).Tag = "*" Then
                p = p + 1
            End If
        End If
        
        If (i + 7) > 0 And (i + 7) < 49 Then
            If Label1(i + 7).Tag = "*" Then
                p = p + 1
            End If
        End If
        
        If (i + 8) > 0 And (i + 8) < 49 And (i + 8) Mod 7 <> 0 Then
            If Label1(i + 8).Tag = "*" Then
                p = p + 1
            End If
        End If
        Label1(i).Tag = p
    End If
Next i
End Sub

